<div class="container-fluid col-md-6">
  <h1 class="header-inner">Question = {{question.question}}</h1>
  <div class="container">
    <h2 {{action "toggleAnswers" on="click"}}>Answers</h2>
    {{#if answersVisible}}
      {{#each question.answers as |answer|}}
        {{answer-listing answer=answer}}
      {{/each}}
    {{/if}}
  </div>
  <div class="container">
    <h2 {{action "toggleComments" on="click"}}>Comments on Question</h2>
    {{#if commentsVisible}}
      {{#each question.comments as |comment|}}
        <p>{{comment.comment}}</p>
      {{/each}}
    {{/if}}
  </div>
</div>

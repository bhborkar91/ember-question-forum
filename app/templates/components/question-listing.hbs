<div class="container">
  <h1>Question = {{question.question}}</h1>
  <div class="container">
    <h2>Answers</h2>
    {{#each question.answers as |answer|}}
      {{answer-listing answer=answer}}
    {{/each}}
  </div>
  <div class="container">
    <h2>Comments on Question</h2>
    {{#each question.comments as |comment|}}
      <p>{{comment.comment}}</p>
    {{/each}}
  </div>
</div>
